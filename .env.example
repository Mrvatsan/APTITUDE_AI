# Google Gemini API Key
OPENAI_API_KEY=your_gemini_api_key_here

# Server Port
PORT=3000

# Secret for JWT signing
JWT_SECRET=your_super_secret_jwt_key_here

# SQLite Database Path
DB_PATH=./aptitude.sqlite

# For localhost testing, use Mailtrap (https://mailtrap.io)

# For production, use Gmail with App Password or SendGrid

# Email Configuration (Mailtrap for localhost testing)
# Sign up at https://mailtrap.io/ and get credentials from inbox settings
APTIRISE_SMTP_HOST=sandbox.smtp.mailtrap.io
APTIRISE_SMTP_PORT=2525
APTIRISE_SMTP_USER=your_mailtrap_username_here
APTIRISE_SMTP_PASSWORD=your_mailtrap_password_here
APTIRISE_SMTP_EMAIL=noreply@aptirise.com

# Redis Configuration (for OTP storage)
REDIS_URL=redis://localhost:6379
